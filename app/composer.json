{
    "name": "zipofar/redsoft-test",
    "description": "Test project for RedSoft",
    "require": {
        "vlucas/phpdotenv": "^2.5",
        "symfony/routing": "^4.1",
        "symfony/http-foundation": "^4.1",
        "symfony/console": "^4.1",
        "php-di/php-di": "^6.0",
        "monolog/monolog": "^1.23",
        "psr/http-message": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Zipofar\\": "src/",
            "Tests\\": "__tests__/"
        }
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.3",
        "phpunit/phpunit": "^7.3",
        "phpunit/dbunit": "^4.0"
    },
    "scripts": {
        "phpcs": "vendor/bin/phpcs src/",
        "phpcbf": "vendor/bin/phpcbf src/",
        "phpunit": "vendor/bin/phpunit --bootstrap vendor/autoload.php __tests__/"
    }
}
